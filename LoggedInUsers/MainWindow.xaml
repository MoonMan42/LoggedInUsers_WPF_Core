<Window x:Class="LoggedInUsers.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LoggedInUsers"
        mc:Ignorable="d"
        Title="Get The User" Height="150" Width="200">
    <Grid>
        <TextBox x:Name="MachineIdTextBox" HorizontalAlignment="Left" Margin="10,10,0,0" Focusable="True" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"  KeyDown="ComputerSearch_KeyDown"/>
        <Label x:Name="UserLabel" Content="User" HorizontalAlignment="Left" Margin="10,33,0,0" VerticalAlignment="Top"/>
        <Label x:Name="PingableLable" Content="Pingable" HorizontalAlignment="Left" Margin="10,64,0,0" VerticalAlignment="Top" FontWeight="Bold"/>

        <Button Content="Search" HorizontalAlignment="Left" Margin="135,10,0,0" VerticalAlignment="Top" Click="ComputerSearch_Click"/>
        <Button Content="Copy" HorizontalAlignment="Left" Margin="135,36,0,0" VerticalAlignment="Top" Click="CopyUser_Click"/>

    </Grid>
</Window>
